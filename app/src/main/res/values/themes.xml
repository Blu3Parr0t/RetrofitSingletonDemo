<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RetrofitSingetonDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF0000</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Batman</item>
    </style>

    <style name="Batman" parent="Widget.AppCompat.Toolbar">
        <item name="materialThemeOverlay">@style/MyToolbar</item>
    </style>

    <style name="MyToolbar" parent="">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/transparent_red</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>
</resources>
